{
  "name": "ai-testing-scripts",
  "version": "1.0.0",
  "description": "Shortcut scripts for running coverage and build tasks from the .ai/testing folder.",
  "scripts": {
    "build-wdio-components": "cd ../../../../wdio && npm run build",
    "run-component-tests": "cd ../../../../wdio && npm run wdio",
    "run-component-tests:spec": "cd ../../../../wdio && npm run wdio --",
    "refresh-coverage-matrix": "cd ../../Testing/Decorators && node run-all-coverage.js",
    "coverage-loop": "npm run refresh-coverage-matrix && npm run component:generate-components && npm run refresh-coverage-matrix",
    "coverage-prop": "cd ../../Testing/Decorators && node prop-coverage.js",
    "coverage-listen": "cd ../../Testing/Decorators && node listen-coverage.js",
    "coverage-event": "cd ../../Testing/Decorators && node event-coverage.js",
    "verify-matrix": "cd ../../Testing/Decorators && node verify-matrix.js",
    "component:coverage": "cd ../../Testing/Decorators/Component && node coverage.js",
    "component:generate-components": "cd ../../Testing/Decorators/Component && node generate-components.js",
    "component:verify-matrix": "cd ../../Testing/Decorators && node verify-matrix.js --decorator=component",
    "state:coverage": "cd ../../Testing/Decorators/State && node coverage.js",
    "state:generate-components": "cd ../../Testing/Decorators/State && node generate-components.js",
    "state:verify-matrix": "cd ../../Testing/Decorators && node verify-matrix.js --decorator=state"
  }
}
